<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingredients</title>
    <link rel="stylesheet" href="css\style.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <%- include("../shared/head") %>
    <h1 style="color: orange; font-size: 50px; text-align: center; font-family: Georgia, 'Times New Roman', Times, serif;margin-bottom: 0%;">Ingredients</h1>
    <main >
        <% ingredients.forEach(ingredient => { %>
            <div class="main-content_ingredients">
                <h1><%= ingredient.category %></h1>
                <% for(let ing of ingredient.ingredients.split(' ')) { %>
                        <h3><%= ing %></h3>
                    <% } %>
            </div>
        <% }); %>
    </main>
    <div class="form-container">
        <h2>Add New Ingredient</h2>
        <form action="/ingredients/add" method="POST">
            <div class="form-group">
                <label for="category">Category:</label>
                <input type="text" id="category" name="category" required>
            </div>
            <div class="form-group">
                <label for="ingredients">Ingredient Name:</label>
                <input type="text" id="ingredients" name="ingredients" required>
            </div>
            <button type="submit">Add Ingredient</button>
        </form>
    </div>
</body>
<%- include("../shared/footer") %>
</html>
